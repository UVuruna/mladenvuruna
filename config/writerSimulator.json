{
    "enabled": true,
    "defaultMode": "typewriter",

    "typewriter": {
        "speed": 50,
        "startDelay": 500,
        "cursorChar": "|",
        "cursorBlink": true
    },

    "handwriting": {
        "duration": 3000,
        "delay": 200,
        "strokeWidth": 2,
        "color": "#2a1a0a",
        "font": "Satisfy",
        "fontSize": 28
    },

    "pen": {
        "enabled": true,
        "offsetX": -8,
        "offsetY": -45
    },

    "parchment": {
        "enabled": true,
        "backgroundColor": "#fffef0",
        "inkColor": "#2a1a0a",
        "shadowEnabled": true
    },

    "scrollTrigger": {
        "threshold": 0.3,
        "rootMargin": "0px"
    }
}
